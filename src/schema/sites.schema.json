{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aiporndirect.com/schema/sites.schema.json",
  "title": "AiPornDirect Site Directory",
  "type": "object",
  "properties": {
    "sites": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "slug",
          "name",
          "website",
          "categories",
          "pricing",
          "summary"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]{4,}$"
          },
          "slug": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "name": {
            "type": "string",
            "minLength": 2
          },
          "website": {
            "type": "string",
            "format": "uri"
          },
          "rank": {
            "type": "integer",
            "minimum": 1
          },
          "categories": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          },
          "pricing": {
            "type": "string",
            "enum": [
              "free",
              "freemium",
              "paid",
              "subscription",
              "credits"
            ]
          },
          "rating": {
            "type": ["integer", "null"],
            "minimum": 0,
            "maximum": 100
          },
          "votes": {
            "type": ["integer", "null"],
            "minimum": 0
          },
          "summary": {
            "type": "string",
            "minLength": 20
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "highlights": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "languages": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[a-z]{2}$"
            }
          },
          "social": {
            "type": "object",
            "properties": {
              "twitter": { "type": "string", "format": "uri" },
              "discord": { "type": "string", "format": "uri" }
            },
            "additionalProperties": false
          },
          "source": {
            "type": "string"
          },
          "lastChecked": {
            "type": "string",
            "format": "date"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["sites"],
  "additionalProperties": false
}
