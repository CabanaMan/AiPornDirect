{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aiporndirect.com/schema/tools.schema.json",
  "title": "AiPornDirect Tool Directory",
  "type": "object",
  "properties": {
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "slug",
          "name",
          "vendor",
          "categories",
          "links",
          "pricing",
          "adultLevel",
          "regions",
          "status",
          "updatedAt"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]{6,}$"
          },
          "slug": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "name": {
            "type": "string",
            "minLength": 2
          },
          "vendor": {
            "type": "string"
          },
          "description": {
            "type": "string",
            "minLength": 20
          },
          "categories": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "features": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "adultLevel": {
            "type": "string",
            "enum": [
              "NSFW-text",
              "NSFW-image",
              "NSFW-video",
              "Hard-NSFW"
            ]
          },
          "links": {
            "type": "object",
            "required": [
              "homepage"
            ],
            "properties": {
              "homepage": {
                "type": "string",
                "format": "uri"
              },
              "docs": {
                "type": "string",
                "format": "uri"
              },
              "pricing": {
                "type": "string",
                "format": "uri"
              },
              "twitter": {
                "type": "string",
                "format": "uri"
              },
              "discord": {
                "type": "string",
                "format": "uri"
              },
              "affiliate": {
                "type": "string",
                "format": "uri"
              }
            },
            "additionalProperties": false
          },
          "pricing": {
            "type": "string",
            "enum": [
              "free",
              "freemium",
              "paid",
              "subscription",
              "credits"
            ]
          },
          "payment": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "card",
                "crypto",
                "paypal",
                "altcoin"
              ]
            }
          },
          "regions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "status": {
            "type": "string",
            "enum": [
              "active",
              "invite",
              "dead",
              "unknown"
            ]
          },
          "safetyNotes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "compliance": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "18+ gate",
                "KYC",
                "no-CSAM",
                "no-bestiality",
                "no-real-person-deepfake"
              ]
            }
          },
          "affiliate": {
            "type": "object",
            "properties": {
              "program": {
                "type": "string"
              },
              "terms": {
                "type": "string"
              },
              "payout": {
                "type": "string"
              },
              "cookieDays": {
                "type": "integer"
              }
            },
            "additionalProperties": false
          },
          "updatedAt": {
            "type": "string",
            "format": "date"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": [
    "tools"
  ],
  "additionalProperties": false
}
